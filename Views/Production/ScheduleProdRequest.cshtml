@using mes.Models.ViewModels
@using mes.Models.InfrastructureModels
@using System.Collections.Generic

@model ProductionCalendarDbModel

@{
    ProductionRequest request = ViewBag.request;
    List<string> allAssignments = ViewBag.allAssignments;
}

<style>     
    select {
        border-radius: 0.25em;
        border-color: rgb(196, 196, 196);
        width: 120px;
        height: 38px;
    }

    table, th {
        font-size: 14px;        
    }
    th {
        font-family: Arial, Helvetica, sans-serif;
    }
    input, td {
        font-size: 14px;
        border-radius: 0.25em;
        border-color: rgb(196, 196, 196);
        width: 120px;
        height: 38px;        
    }
    input:hover {
        background-color: gold;
    }
    input:focus {
        background-color: lightyellow;
    }  

</style>



<h3>programma attivit√† di produzione</h3>
<br>
<br>
<hr>
<table id="myTable" style="width:100%;">
	<tr>
        <th></th>
		<th>cliente</th>
		<th>articolo</th>
        <th>descrizione</th>
		<th>consegna</th>            
		<th>richiesti</th>
        <th>finiti</th>
        <th>semilavorati</th>
        <th>lastre</th>
	</tr>
    <tr>
        <td><input type="hidden" style="width:10px;" class="form-control" value="@request.id" readonly/></td> 
        <td><input type="text" style="width:160px;" class="form-control" value="@request.Cliente" readonly/></td>            
        <td><input type="text" style="width:240px;" class="form-control" value="@request.Articolo" readonly/></td>
        <td><input type="text" style="width:400px;" class="form-control" value="@request.Descrizione" readonly/></td>
        <td><input type="text" style="width:120px;" class="form-control" value="@request.DataCons" readonly/></td>                     
        <td><input type="text" style="width:90px;" class="form-control" value="@request.Richiesti" readonly/></td>
        <td><input type="text" style="width:90px; background-color: @request.Finitibg;" class="form-control" value="@request.Disponibili" readonly/></td>
        <td><input type="text" style="width:90px; background-color: @request.Semilavbg;" class="form-control" value="@request.DispSemilav" readonly/></td>
        <td><input type="text" style="width:90px; background-color: @request.Pannellibg;" class="form-control" value="@request.DispPannello" readonly/></td>
	</tr>
</table>
<hr>
<br>


  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-lg">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">Programma lavorazione per...</h4>
        </div>
        <div class="modal-body">
          <input type="datetime-local" id="startDate" placeholder="data di inizio"></input>
          <input type="datetime-local" id="endDate" placeholder="data di fine"></input>
          <input type="text" id="description" placeholder="descrizione"></input>
          <select id="assignment">
          	<option val="" selected> </option>
            <option val="RvB Plast">RvB Plast</option>
            <option val="RvB 1836">RvB 1836</option>
            <option val="RvB 1536">RvB 1536</option>
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-warning" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-success" onclick="message()">conferma</button>
        </div>
      </div>
      
    </div>
  </div>
  
</div>

<script>
    function message(){
        var inizio=$('#startDate').val();
        var fine = $('#endDate').val();
        var assignedTo = $('#assignment').val();
        var description = $('#description').val();
    alert("data inizio: " + inizio + "- data fine: " + fine + " assegnato a:" + assignedTo + " - descrizione: " + description);
    };
</script>