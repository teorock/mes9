@using mes.Models.ViewModels
@using System.Collections.Generic
@using System.Linq
@model List<DashboardMaterialiViewModel>
  

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    body {
        position: relative; 
    }
    #section1 {padding-top:50px;padding-bottom:30px;height:@ViewBag.bordiLines;color: #fff; background-color: #1E88E5;}
    #section2 {padding-top:50px;padding-bottom:30px;height:@ViewBag.colleLines;color: #fff; background-color: #673ab7;}
    #section3 {padding-top:50px;padding-bottom:30px;height:@ViewBag.panelLines;color: #fff; background-color: #ff9800;}
    #section4 {padding-top:50px;padding-bottom:30px;height:@ViewBag.semiLines;color: #fff; background-color: #06a700;}
    #section51 {padding-top:50px;height:500px;color: #fff; background-color: #00bcd4;}
    #section52 {padding-top:50px;height:500px;color: #fff; background-color: #009688;}
  </style> 

<br>
<div class="row">
    <div class="col-md-3">        
        <a class="btn btn-primary btn-block" href="#section1">bordi</a>
    </div>
    <div class="col-md-3">        
        <a class="btn btn-secondary btn-block" href="#section2">colla</a>
    </div>
    <div class="col-md-3">        
        <a class="btn btn-warning btn-block" href="#section3">pannelli</a>
    </div>
    <div class="col-md-3">        
        <a class="btn btn-success btn-block" href="#section4">semilavorati</a>
    </div>        
</div>
<br>
<div id="section1" class="container-fluid">
  <h1>bordi</h1>
  @foreach(DashboardMaterialiViewModel oneModel in Model)
  {
    if(oneModel.Section=="bordi")
    {
      <div class="alert @oneModel.BackgroundColor">
        <strong>@oneModel.PreMessage</strong> @oneModel.Message <a asp-controller="Programs" asp-action="MagBordi" class="alert-link">magazzino bordi</a>
      </div>
    }
  }
</div>
<div id="section2" class="container-fluid">
  <h1>colla</h1>
  @foreach(DashboardMaterialiViewModel oneModel in Model)
  {
    if(oneModel.Section=="colle")
    {
      <div class="alert @oneModel.BackgroundColor">
        <strong>@oneModel.PreMessage</strong> @oneModel.Message <a asp-controller="Programs" asp-action="MagColle" class="alert-link">magazzino colle</a>
      </div>
    }
  }
</div>
<div id="section3" class="container-fluid">
  <h1>pannelli</h1>
  @foreach(DashboardMaterialiViewModel oneModel in Model)
  {
    if(oneModel.Section=="pannelli")
    {
      <div class="alert @oneModel.BackgroundColor">
        <strong>@oneModel.PreMessage</strong> @oneModel.Message <a asp-controller="Programs" asp-action="MagPannelli" class="alert-link">magazzino pannelli</a>
      </div>
    }
  }
</div>
<div id="section4" class="container-fluid">
    <h1>semilavorati</h1>
    @foreach(DashboardMaterialiViewModel oneModel in Model)
    {
      if(oneModel.Section=="semilavorati")
      {
        <div class="alert @oneModel.BackgroundColor">
          <strong>@oneModel.PreMessage</strong> @oneModel.Message <a asp-controller="Programs" asp-action="MainSemilavorati" class="alert-link">magazzino semilavorati</a>
        </div>
      }
    }
</div>
