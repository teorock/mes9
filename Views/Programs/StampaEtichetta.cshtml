@using mes.Models.ViewModels
@model PannelloViewModel


<div class="container">
  <div class="row align-items-start">
    <div class="col-md-7" align="center">
      <br>
      <h2>stampa etichette</h2>
      <hr>
        <form asp-controller="Programs" asp-action="StampaEtichetta" asp-route-id="@Model.id" asp-route-copie="" method="post">
          <div class="form-group">
            <input style="font-size: 30px;" type="text" class="form-control" value="Cliente: @Model.Cliente" readonly>
            <input style="font-size: 30px;" type="text" class="form-control" value="Materiale: @Model.Tipomateriale" readonly>
            <input style="font-size: 30px;" type="text" class="form-control" value="Dimensioni: @Model.Lunghezza x @Model.Larghezza" readonly>
            <input style="font-size: 30px;" type="text" class="form-control" value="Spessore: @Model.Spessore" readonly>
            <input style="font-size: 30px;" type="text" class="form-control" value="Locazione: @Model.Locazione" readonly>
          </div>
          <div class="form-group">
            <br>
            <h3>numero copie ?</h3>
            <input style="font-size: 30px; text-align:center;" type="text" class="form-control" id="copies"  name="copie">
          </div>
          <br>
          <button type="submit" class="btn btn-primary btn-block btn-lg">stampa</button>
        </form>
    </div>
  </div>
</div>

<script>

  $(document).ready(function(){
    $("#copiesModal").modal('show');
  });

</script>