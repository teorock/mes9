<script>
    $(document).ready(function() {
        // Initialize DataTables on your table using its ID
        $('#pfcTable').DataTable({
            // You might want to disable sorting on the action/hidden columns.
            // Adjust 'targets' based on the column index (0-indexed).
            // If you have 10 columns, the last three (edit icon, hidden ID, hidden Enabled) are 7, 8, 9.
            "columnDefs": [
                { "orderable": false, "targets": [7, 8, 9] },
                { "searchable": false, "targets": [7, 8, 9] } // Also explicitly disable searching on these columns
            ]
        });
    });
</script>