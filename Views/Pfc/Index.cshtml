        transition: border-color 0.2s ease-in-out;
    }
    .dataTables_wrapper .dataTables_filter input:focus {
        border-color: #3b82f6;
    }
    .dataTables_wrapper .dataTables_length select {
        border: 1px solid #d1d5db;
        border-radius: 4px;
        padding: 4px 8px;
        margin-right: 4px;
