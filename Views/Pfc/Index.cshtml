<script>
    function conferma() {
        $("#frmAggCommesse").submit();
    }
</script>

<div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Aggiornamento dati</h5>
            </div>
            <div class="modal-body">
                <p>confermi aggiornamento ?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">annulla</button>
                <button type="button" class="btn btn-outline-success" onclick="conferma()">aggiorna</button>
            </div>
        </div>
    </div>
</div>
<h2>gestione moduli pfc</h2>
<br>
<br>
<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-7">
        @* DataTables will automatically add the search box here. *@
    </div>
    <div class="col-md-2">
        <a class="btn btn btn-outline-primary" asp-controller="Pfc" asp-action="Index" asp-route-filterCompleted="@ViewBag.filter">@ViewBag.removeCaption</a>
    </div>
</div>
                <br>
<hr>
@using(Html.BeginForm("AggiornaCommesse", "PfcController", FormMethod.Post, new { name = "frmAggCommesse", id = "frmAggCommesse" }))
{
    <table id="pfcTable" class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
            <tr>
                <th>modulo numero</th>
                <th>cliente</th>
                <th>rif. esterno</th>
                <th>data consegna</th>
                <th>avanzamento</th>
                <th>completato</th>
                <th>abilitato</th> @* ALWAYS render this TH for consistent column count *@
                <th></th> @* For the ModPfc link (edit icon) *@
                <th></th> @* For the hidden ID input *@
                <th></th> @* For the hidden Enabled input (the second one) *@
            </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
            @for(int x = 0; x < Model.Count; x++)
            {
                <tr>
                    @if(!authorize)
                    {
                        <td data-search="@Model[x].NumeroCommessa"><input readonly type="text" asp-for=@Model[x].NumeroCommessa class="form-control" value="@Model[x].NumeroCommessa" /></td>
                        <td data-search="@Model[x].Cliente"><input readonly type="text" asp-for=@Model[x].Cliente class="form-control" value="@Model[x].Cliente" /></td>
                        <td data-search="@Model[x].RifEsterno"><input readonly type="text" asp-for=@Model[x].RifEsterno class="form-control" value="@Model[x].RifEsterno" /></td>
                        <td data-search="@Model[x].DataConsegna"><input readonly type="text" asp-for=@Model[x].DataConsegna class="form-control" value="@Model[x].DataConsegna" /></td>
                        <td data-search="@Model[x].Progress"><input readonly type="text" asp-for=@Model[x].Progress class="form-control" value="@Model[x].Progress" /></td>
                        <td data-search="@Model[x].Completed"><input readonly type="text" asp-for=@Model[x].Completed class="form-control" value="@Model[x].Completed" /></td>
                        <td></td> @* Placeholder for the 'abilitato' column when not authorized *@
                        <td></td> @* Placeholder for the edit icon column when not authorized *@
                        <td><input type="hidden" asp-for=@Model[x].id class="form-control" value="@Model[x].id" readonly /></td> @* Hidden ID input *@
                        <td></td> @* Placeholder for the hidden Enabled input (the second one) *@
                    }
                    else
                    {
                        <td data-search="@Model[x].NumeroCommessa"><input type="text" asp-for=@Model[x].NumeroCommessa class="form-control" value="@Model[x].NumeroCommessa" readonly /></td>
                        <td data-search="@Model[x].Cliente"><input type="text" asp-for=@Model[x].Cliente class="form-control" value="@Model[x].Cliente" readonly /></td>
                        <td data-search="@Model[x].RifEsterno"><input type="text" asp-for=@Model[x].RifEsterno class="form-control" value="@Model[x].RifEsterno" readonly /></td>
                        <td data-search="@Model[x].DataConsegna"><input type="text" asp-for=@Model[x].DataConsegna class="form-control" value="@Model[x].DataConsegna" readonly /></td>
                        <td data-search="@Model[x].Progress"><input readonly type="text" asp-for=@Model[x].Progress class="form-control" value="@Model[x].Progress" /></td>
                        <td data-search="@Model[x].Completed"><input readonly type="text" asp-for=@Model[x].Completed class="form-control" value="@Model[x].Completed" /></td>
                        @if(!productionFilter) { // If not in production filter, show the enabled field directly
                            <td data-search="@Model[x].Enabled"><input type="text" asp-for=@Model[x].Enabled class="form-control" value="@Model[x].Enabled" readonly /></td>
                        }
                        else // If in production filter, render an empty td to maintain column count
                        {
                            <td></td>
                        }
                        <td style="padding-left: 25px;"><a asp-controller="Pfc" asp-action="ModPfc" asp-route-inputId="@Model[x].id"><i class="material-icons text-warning">&#xE254;</i></a></td>
                        <td><input type="hidden" asp-for=@Model[x].id class="form-control" value="@Model[x].id" /></td>
                        <td><input type="hidden" asp-for=@Model[x].Enabled class="form-control" value="@Model[x].Enabled" readonly/></td>
                    }
                </tr>
            }
        </tbody>
    </table>
    <br>
    <br>
    @if(authorize)
    {
        <div class="row">
            <div class="col-md-3 d-grid">
                <a class="btn btn-outline-success btn-block" asp-controller="Pfc" asp-action="InsertPfc">inserisci modulo</a>
            </div>
        </div>
    }
}

<script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
