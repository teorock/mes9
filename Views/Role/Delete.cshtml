@model Microsoft.AspNetCore.Identity.IdentityRole
@{  
    ViewData["Title"] = "Create";  
}  
<h1>Cancella ruolo esistente</h1>  
<hr>  
<br>
<div class="row">  
    <div class="col-md-4">  
        <form asp-action="RemoveRole">  
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            <div class="form-group">  
                <label asp-for="Name" class="control-label"></label>  
                <input asp-for="Name" class="form-control" />  
                <span asp-validation-for="Name" class="text-danger"></span>  
            </div> 
            <br>
            <div class="form-group">  
                <input type="submit" value="Crea" class="btn btn-outline-primary" />  
            </div>  
        </form>  
    </div>  
</div>  
<div>  
    <a asp-action="Index">Torna a lista ruoli</a>  
</div>  
@section Scripts {  
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");  
    }  
} 